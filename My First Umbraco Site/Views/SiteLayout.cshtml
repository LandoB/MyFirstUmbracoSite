@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>My First Umbraco Site</title>
	@RenderSection("Head",required:false)
	<link rel="stylesheet" href="@Url.Content("~/css/bootstrap.min.css")" />
	<link rel="stylesheet" href="@Url.Content("~/css/bootswatch.yeti.bootstrap.min.css ")" />
	<link rel="stylesheet" href="@Url.Content("~/css/font-awesome.min.css")" />
	<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
	<link rel="stylesheet" href="@Url.Content("~/css/styles.css")" />
</head>
<body>
    <div id="sidebar">
        <img src="@Url.Content("~/media/1007/rolando-bernal.jpg")" alt="headshot" class="headshot" />
        <span id="username">Lando B</span>
        @Umbraco.RenderMacro("NavBar")
    </div>
    <div id="wrapper">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <button id="sidebarToggle" class="btn btn-primary btn-sm">
                            <i class="fa fa-angle-left"></i>
                        </button>
                    </li>
                </ul>
                <a asp-controller="App" asp-action="Index" class="navbar-brand">@Umbraco.Field("siteTitle", recursive: true)</a>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#" class="btn btn-sm btn-info">
                            <i class="fa fa-save"></i> Save
                        </a>
                    </li>
                    <li>
                        <a href="#" class="btn btn-sm btn-info">
                            <i class="fa fa-print"></i> Print
                        </a>
                    </li>                    
                </ul>
            </div>
        </nav> 
        <div id="main" class="container-fluid">
            <div>
                @RenderBody()
            </div>
        </div>
        <br /><br /><br />
        <div id="footer" class="container-fluid">
			<div class="nav navbar-inverse navbar-fixed-bottom">
				@Umbraco.Field("siteFooter", recursive: true)
			</div>
		</div>
    </div>
    
	<script type="text/javascript" src="@Url.Content("~/scripts/jquery.min.js")"></script>
	<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.1.min.js"></script>
	<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>
	<script src="http://ajax.aspnetcdn.com/ajax/mvc/5.1/jquery.validate.unobtrusive.min.js"></script>
	<script type="text/javascript" src="@Url.Content("~/scripts/site.js")"></script>
	@Umbraco.RenderMacro("FormsRenderScripts")
	
	
</body>
</html>